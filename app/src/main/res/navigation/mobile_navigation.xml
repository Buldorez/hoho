<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.anew.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"
        android:icon="@drawable/ic_home"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.anew.ui.listen.ListenFragment"
        android:label="Listen"
        tools:layout="@layout/fragment_listen"
        android:icon="@drawable/ic_listen"/>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.anew.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"
        android:icon="@drawable/ic_profile"/>
</navigation>